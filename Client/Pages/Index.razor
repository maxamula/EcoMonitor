@code {
    List<EcoMonitor.Shared.Record> records = new List<EcoMonitor.Shared.Record>();
    List<EcoMonitor.Shared.Object> factories = new List<EcoMonitor.Shared.Object>();

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        HttpClient c = new HttpClient();
        c.BaseAddress = new System.Uri("http://localhost:5212/");
        try
        {
            records = await c.GetFromJsonAsync<List<EcoMonitor.Shared.Record>>($"api/pollution/records");
            factories = await c.GetFromJsonAsync<List<EcoMonitor.Shared.Object>>($"api/pollution/objects");
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }

    private async Task OnPageChanged(int newPage)
    {
        await LoadData();
    }
